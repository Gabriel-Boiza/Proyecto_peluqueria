<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.peluqueria_3.Controllers.EmpleadosController" style="-fx-background-color:#E9E5E0;" prefHeight="600.0" prefWidth="800.0">

    <!-- Parte superior con el logo y líneas -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" text="DREAM'S" style="-fx-font-family: 'Arial'; -fx-font-size: 58px; -fx-font-weight: bold; -fx-text-fill: #3A3B38;
                    -fx-effect: dropshadow(gaussian,#C4C1BC , 4, 0.0, -4, 4);"/>
            <HBox alignment="CENTER" spacing="5">
                <Line startX="0" startY="0" endX="65" endY="0" stroke="black" strokeWidth="2"/>
                <Label text="Perruqueria" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Line startX="0" startY="0" endX="65" endY="0" stroke="black" strokeWidth="2"/>
            </HBox>
            <VBox spacing="30" alignment="CENTER">
                <Line startX="0" startY="0" endX="1800" endY="0" stroke="white" strokeWidth="8"/>
                <Line startX="0" startY="0" endX="600" endY="0" stroke="white" strokeWidth="4"/>
            </VBox>
        </VBox>
    </top>

    <!-- Parte central con el formulario de login -->
    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER" maxWidth="200" minHeight="400" minWidth="300" style="-fx-background-color:#E9E5E0;">
            <TextField prefHeight="28.0" prefWidth="250.0" promptText="Usuario" fx:id="input_usuario"/>
            <PasswordField prefHeight="28.0" prefWidth="250.0" promptText="Contraseña" fx:id="input_contrasenya"/>
            <Button prefHeight="28.0" prefWidth="250.0" mnemonicParsing="false" text="Iniciar sesión" style="-fx-background-color:#3A3B38; -fx-text-fill: white;"  fx:id="BotonLogin" onAction="#ValidarUser"/>
        </VBox>
    </center>

</BorderPane>
